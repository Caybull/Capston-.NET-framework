<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background-image: url('http://i.huffpost.com/gen/1910124/images/o-MORTGAGE-facebook.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            /*      text-size-adjust: 200%;
            text-align: center;*/
            background-attachment: fixed;
            background-size: cover;
            font-family: Arial, Helvetica, sans-serif;
        }

        .flip-card {
            vertical-align:middle;
            background-color: transparent;
            width: 300px;
            height: 300px;
            perspective: 1000px;
        }

        .flip-card-inner {
            position: absolute;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
        }

        .flip-card-front {
            background-color: #bbb;
            color: black;
        }

        .flip-card-back {
            background-color: #2980b9;
            color: white;
            transform: rotateY(180deg);
        }
        .block {
            display: block;
            width: 100%;
            border: none;
            background-color: #04AA6D;
            padding: 14px 28px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
        }
    </style>
</head>
<body>
    <button type="button" class="block">@Html.ActionLink("Add To My Dynasty", "Create")</button>
    @foreach (var item in Model)
    {
        <h1>
            @Html.DisplayFor(modelitem => item.StreetNumber)<br />
            @Html.DisplayFor(modelitem => item.StreetName)
        </h1>


        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="https://ak3.picdn.net/shutterstock/videos/6855973/thumb/4.jpg" alt="Avatar" style="width:300px;height:300px;">
                </div>

                <div class="flip-card-back">


                    <p>Renovation Cost:</p>
                    @Html.DisplayFor(modelItem => item.RenovationCost)<br />

                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "MyHousDetailsOne", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })

                </div>

            </div>
        </div>
    }
    <footer>
        <p>&copy; @DateTime.Now.Year - Dynasty Properties LLC</p>
    </footer>

</body>
</html>


